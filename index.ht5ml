        const cart = document.getElementById('cart');
        const cartItems = document.getElementById('cartItems');
        const cartCount = document.querySelector('.cart-count');
        const cartTotal = document.getElementById('cartTotal');
        const checkoutBtn = document.getElementById('checkoutBtn');
        const planButtons = document.querySelectorAll('[data-plan]');
        const notification = document.getElementById('notification');
        const loginBtn = document.getElementById('loginBtn');
        const signupBtn = document.getElementById('signupBtn');
        const loginModal = document.getElementById('loginModal');
        const signupModal = document.getElementById('signupModal');
        const loginClose = document.getElementById('loginClose');
        const signupClose = document.getElementById('signupClose');
        const showSignup = document.getElementById('showSignup');
        const showLogin = document.getElementById('showLogin');
        const startFreeTrialBtn = document.getElementById('startFreeTrialBtn');
        const ctaFreeTrialBtn = document.getElementById('ctaFreeTrialBtn');
        const tryRobynBtn = document.getElementById('tryRobynBtn');
        const tryRobynFreeBtn = document.getElementById('tryRobynFreeBtn');
        const loginForm = document.getElementById('loginForm');
        const signupForm = document.getElementById('signupForm');

        // Cart Data
        let cartData = [];

        // Header scroll effect
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                header.classList.add('header-scrolled');
            } else {
                header.classList.remove('header-scrolled');
            }
        });

        // Toggle Cart
        cartToggle.addEventListener('click', () => {
            cart.classList.add('active');
        });

        closeCart.addEventListener('click', () => {
            cart.classList.remove('active');
        });

        // Modal Functions
        loginBtn.addEventListener('click', () => {
            loginModal.classList.add('active');
        });

        signupBtn.addEventListener('click', () => {
            signupModal.classList.add('active');
        });

        startFreeTrialBtn.addEventListener('click', () => {
            signupModal.classList.add('active');
        });

        ctaFreeTrialBtn.addEventListener('click', () => {
            signupModal.classList.add('active');
        });

        tryRobynBtn.addEventListener('click', () => {
            signupModal.classList.add('active');
        });

        tryRobynFreeBtn.addEventListener('click', () => {
            signupModal.classList.add('active');
        });

        loginClose.addEventListener('click', () => {
            loginModal.classList.remove('active');
        });

        signupClose.addEventListener('click', () => {
            signupModal.classList.remove('active');
        });

        showSignup.addEventListener('click', (e) => {
            e.preventDefault();
            loginModal.classList.remove('active');
            signupModal.classList.add('active');
        });

        showLogin.addEventListener('click', (e) => {
            e.preventDefault();
            signupModal.classList.remove('active');
            loginModal.classList.add('active');
        });

        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === loginModal) {
                loginModal.classList.remove('active');
            }
            if (e.target === signupModal) {
                signupModal.classList.remove('active');
            }
        });

        // Form submission
        loginForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            // In a real app, you would send this to a server
            console.log('Login attempt:', { email, password });
            
            showNotification('Login Successful', 'Welcome back to SynthAI Pro!');
            loginModal.classList.remove('active');
        });

        signupForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const name = document.getElementById('signupName').value;
            const email = document.getElementById('signupEmail').value;
            const password = document.getElementById('signupPassword').value;
            const confirm = document.getElementById('signupConfirm').value;
            
            if (password !== confirm) {
                showNotification('Error', 'Passwords do not match');
                return;
            }
            
            // In a real app, you would send this to a server
            console.log('Signup attempt:', { name, email, password });
            
            showNotification('Account Created', 'Welcome to SynthAI Pro! Your account has been created.');
            signupModal.classList.remove('active');
        });

        // Plan selection
        planButtons.forEach(button => {
            button.addEventListener('click', () => {
                const plan = button.getAttribute('data-plan');
                let price = 0;
                let name = '';
                
                switch(plan) {
                    case 'free':
                        price = 0;
                        name = 'Free Plan';
                        break;
                    case 'pro':
                        price = 299;
                        name = 'Pro Plan';
                        break;
                    case 'enterprise':
                        price = 899;
                        name = 'Enterprise Plan';
                        break;
                }
                
                // Check if item already in cart
                const existingItemIndex = cartData.findIndex(item => item.plan === plan);
                
                if (existingItemIndex !== -1) {
                    // Item already in cart, show message
                    showNotification('Plan already in cart', 'This plan is already in your shopping cart');
                    return;
                }
                
                // Add to cart
                cartData.push({
                    plan: plan,
                    name: name,
                    price: price
                });
                
                updateCart();
                showNotification('Added to cart', `${name} has been added to your cart`);
                
                // Auto-open cart if it's not the free plan
                if (plan !== 'free') {
                    cart.classList.add('active');
                }
            });
        });

        // Update cart display
        function updateCart() {
            // Clear cart items
            cartItems.innerHTML = '';
            
            // Update cart count
            cartCount.textContent = cartData.length;
            
            // Calculate total
            let total = 0;
            
            // Add items to cart
            cartData.forEach((item, index) => {
                total += item.price;
                
                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                    <div class="cart-item-info">
                        <h4>${item.name}</h4>
                        <div class="cart-item-price">R${item.price}</div>
                    </div>
                    <button class="remove-item" data-index="${index}">
                        <i class="fas fa-trash"></i>
                    </button>
                `;
                
                cartItems.appendChild(cartItem);
            });
            
            // Update total
            cartTotal.textContent = `R${total}.00`;
            
            // Add event listeners to remove buttons
            const removeButtons = document.querySelectorAll('.remove-item');
            removeButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    const index = parseInt(e.currentTarget.getAttribute('data-index'));
                    const removedItem = cartData[index];
                    cartData.splice(index, 1);
                    updateCart();
                    showNotification('Item removed', `${removedItem.name} has been removed from your cart`);
                });
            });
        }

        // Checkout process
        checkoutBtn.addEventListener('click', () => {
            if (cartData.length === 0) {
                showNotification('Cart is empty', 'Please add items to your cart before checkout');
                return;
            }
            
            // In a real implementation, this would redirect to payment gateway
            showNotification('Redirecting to payment', 'You will be redirected to our secure payment gateway');
            
            // Simulate payment processing
            setTimeout(() => {
                showNotification('Payment successful', 'Thank you for your purchase! Your account will be upgraded shortly.');
                cartData = [];
                updateCart();
                cart.classList.remove('active');
            }, 2000);
        });

        // Show notification
        function showNotification(title, message) {
            const notificationTitle = notification.querySelector('.notification-title');
            const notificationMessage = notification.querySelector('.notification-message');
            
            notificationTitle.textContent = title;
            notificationMessage.textContent = message;
            
            notification.classList.add('active');
            
            setTimeout(() => {
                notification.classList.remove('active');
            }, 3000);
        }

        // Fade in elements on scroll
        const fadeElements = document.querySelectorAll('.fade-in');
        
        const fadeInOnScroll = () => {
            fadeElements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('active');
                }
            });
        };
        
        window.addEventListener('scroll', fadeInOnScroll);
        // Initial check
        fadeInOnScroll();

        // Demo AI interaction
        const demoInput = document.querySelector('.demo-input');
        const demoOutput = document.querySelector('.demo-output');
        
        if (demoInput && demoOutput) {
            demoInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    const question = demoInput.value.trim();
                    if (question) {
                        demoOutput.textContent = "Robyn is thinking...";
                        
                        // Simulate AI response after a short delay
                        setTimeout(() => {
                            const responses = [
                                "I understand your question. Based on my knowledge, I would recommend exploring our documentation for more detailed information.",
                                "That's an interesting question! Our AI capabilities include natural language processing, image generation, and code assistance.",
                                "I'd be happy to help with that. Our platform integrates multiple AI technologies to provide comprehensive solutions.",
                                "Great question! Our AI systems are designed to learn and adapt to your specific needs over time.",
                                "I appreciate your inquiry. Our team is constantly working to improve and expand our AI offerings."
                            ];
                            
                            const randomResponse = responses[Math.floor(Math.random() * responses.length)];
                            demoOutput.textContent = randomResponse;
                        }, 1000);
                    }
                }
            });
        }
    </script>
</body>
</html>
